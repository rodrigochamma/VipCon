@page
@model VipCon.Pages.Parceiros.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Parceiro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Parceiro.Nome" class="control-label"></label>
                <input asp-for="Parceiro.Nome" class="form-control" />
                <span asp-validation-for="Parceiro.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parceiro.Link" class="control-label"></label>
                <input asp-for="Parceiro.Link" class="form-control" />
                <span asp-validation-for="Parceiro.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Parceiro.Imagem" class="control-label"></label>
                <input asp-for="Parceiro.Imagem" class="form-control" />
                <span asp-validation-for="Parceiro.Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
