@page
@model VipCon.Pages.Parceiros.IndexModel

@{
    ViewData["Title"] = "Lista de Parceiro";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Lista de Parceiro</h2>

<p>
    <a asp-page="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Parceiro[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parceiro[0].Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parceiro[0].Imagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Parceiro) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
