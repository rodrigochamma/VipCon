@page
@model VipCon.Pages.Usuarios.DeleteModel

@{
    ViewData["Title"] = "Excluir Usuário";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluír este usuário?</h3>
<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUser.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUser.Sobrenome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.Sobrenome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ApplicationUser.Email" />
        <input type="submit" value="Excluir" class="btn btn-default" /> |
        <a asp-page="./ListaUsuario">Voltar à listagem</a>
    </form>
</div>
