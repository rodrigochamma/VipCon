@page
@model VipCon.Pages.Noticias.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Noticia[0].Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Noticia[0].Chamada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Noticia[0].Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Noticia[0].DataHoraInclusao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Noticia[0].Imagem)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Noticia) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chamada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraInclusao)
            </td>
            <td>
                <img src="~/uploads/@item.Imagem" />
                
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
